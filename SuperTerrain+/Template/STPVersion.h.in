#pragma once
#ifndef _STP_VERSION_H_
#define _STP_VERSION_H_

namespace SuperTerrainPlus {
	
	/**
	 * @brief STPVersion contains version information regarding the SuperTerrain+ project.
	*/
	namespace STPVersion {
		
		//The complete version number will be `<Major>.<Minor>.<Patch>`.
		inline constexpr unsigned int Major = @CMAKE_PROJECT_VERSION_MAJOR@,
			Minor = @CMAKE_PROJECT_VERSION_MINOR@,
			Patch = @CMAKE_PROJECT_VERSION_PATCH@;
		
	}
	
}
#endif//_STP_VERSION_H_